<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include6"
        layout="@layout/menu_ver_frasea" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/graduate"
        android:paddingTop="10dp"
        android:text="Frase"
        android:textAlignment="center"
        android:textColor="@color/blue_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/visualizacao_frasea"
        android:layout_width="match_parent"
        android:layout_height="213dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Data_frasea"
                android:layout_width="196dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="Data"
                android:textAlignment="viewStart"
                android:textColor="@color/blue_dark"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dbData_frasea"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Sujeito_frasea"
                android:layout_width="196dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="Sujeito"
                android:textAlignment="viewStart"
                android:textColor="@color/blue_dark"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dbSujeito_frasea"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="18dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Acao_frasea"
                android:layout_width="196dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="Ação"
                android:textAlignment="viewStart"
                android:textColor="@color/blue_dark"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dbAcao_frasea"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="18dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Artefacto_frasea"
                android:layout_width="196dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="Artefacto"
                android:textAlignment="viewStart"
                android:textColor="@color/blue_dark"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dbArtefacto_frasea"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="18dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Recurso_frasea"
                android:layout_width="193dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="Recurso"
                android:textAlignment="viewStart"
                android:textColor="@color/blue_dark"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dbRecurso_frasea"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="18dp" />


        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/Agrupamentos"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="340dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/graduate"
        android:text="Agrupamentos a que está associada"
        android:textAlignment="center"
        android:textColor="@color/blue_dark"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tableView_frases_agrupamentos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

    <de.codecrafters.tableview.TableView
        android:id="@+id/tableView_frases_agrupamentos"
        android:layout_width="366dp"
        android:layout_height="182dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="392dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tableView_headerColor="@color/blue_light"
        tools:ignore="MissingConstraints">


    </de.codecrafters.tableview.TableView>



</android.support.constraint.ConstraintLayout>